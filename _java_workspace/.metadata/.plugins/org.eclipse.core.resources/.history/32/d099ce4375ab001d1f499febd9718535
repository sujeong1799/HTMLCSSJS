public class ProductMain {

	public static void main(String[] args) {
		
		String input;
		Product p = new Product();
		
		Scanner scan = new Scanner(System.in);
		
		
		
		while(true) {
		System.out.println("상품을 등록하시겠습니까? (y/n)");
